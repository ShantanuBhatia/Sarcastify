{
    "manifest_version": 2,
    "name": "Sarcastify",
    "description": "Add a context menu action to copy Spongebob-style Sarcastic version of highlighted text to the clipboard.",
    "version": "1.0",
    "homepage_url": "https://github.com/ShantanuBhatia/Sarcastify",

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite"
    ]
}
